<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv6LayoutModulo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/cv2TextViewEstudios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cv6TextViewSubtituloCampo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cv6_SubtituloCampo"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/primary_text_light" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="#FF909090" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
           android:id="@+id/cv6EditSubtituloCampo"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/cv6ImageViewLapiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_content_edit" />
    </LinearLayout>
    

     <LinearLayout 
         android:id="@+id/cv6TextViewCampo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cv6TextViewCampo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cv6_Campo"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/primary_text_light" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dip"
            android:background="#FF909090" />

   </LinearLayout>
   
    <EditText
        android:id="@+id/cv6EditCampo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine"
        android:isScrollContainer="true"
        android:layout_below="@+id/cv6EditSubtituloCampo" />
</LinearLayout>